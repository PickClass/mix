{
	
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",// "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json"
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"domains": {
			"react": "recommended",
			"next": "recommended"
		  },
		"enabled": true,
		"rules": {
			"recommended": true
		}
		
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
